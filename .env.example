# GitHub Configuration
GITHUB_TOKEN=your_github_token_here

# API Configuration
API_HOST=localhost
API_PORT=8000
API_DEBUG=True

# Database Configuration (if using PostgreSQL for vector storage)
DATABASE_URL=postgresql://user:password@localhost:5432/codecompass

# AI/ML Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
MAX_ITERATIONS=10
CONTEXT_WINDOW=2000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/codecompass.log

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Temporary Storage
TEMP_DIR=./temp
CLEANUP_INTERVAL_HOURS=24